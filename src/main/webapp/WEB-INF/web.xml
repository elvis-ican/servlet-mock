<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee" >

    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>dev.elvis.servlets.HelloWorldServlet</servlet-class>
    </servlet>
    <!-- allows us to send request to http://localhost:8080/servlet-demo/hello -->
    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ActorServlet</servlet-name>
        <servlet-class>dev.elvis.servlets.ActorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActorServlet</servlet-name>
        <url-pattern>/actors</url-pattern>
    </servlet-mapping>

</web-app>